{
  "name": "@we-dev/client",
  "private": true,
  "version": "1.0.0",
  "description": "We Dev Client Application",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "scripts": {
    "dev": "vite",
    "build": "cross-env ELECTRON=true vite build && electron-builder --dir --config electron-builder.json",
    "build:win": "cross-env ELECTRON=true vite build && electron-builder --win",
    "build:mac": "cross-env ELECTRON=true vite build && electron-builder --mac",
    "tsc": "tsc",
    "electron:dev": "vite",
    "builds": "vite build",
    "postinstall": "electron-rebuild -f -w node-pty --arch=x64 && vite build && electron-builder install-app-deps"
  },
  "main": "dist-electron/main.js",
  // ... (dependencies remain the same)
  "build": {
    "appId": "com.we0.app",
    "productName": "We Dev",
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "target": "dir",
      "arch": [
        "arm64"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-Setup-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "We Dev"
    }
  }
}
